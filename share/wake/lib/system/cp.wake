global def cp x y =
  def outdir = simplify "{y}/.."
  job (which "cp", x, y, Nil) (outdir, x, Nil)

global def installAs dest file =
  def path = simplify "{dest}/.."
  def alwaysCp x y = uncached_manual_job "." "" Nil (which "cp", file, dest, Nil) (file, Nil) (\_ dest, Nil)
  def doit _ = alwaysCp file dest | outputs | map first # Nil if dest outside workspace
  waitAll (doit _) (mkdir 0775 path)

global def installIn dir file =
  def dest = simplify "{dir}/{file}"
  installAs dest file
