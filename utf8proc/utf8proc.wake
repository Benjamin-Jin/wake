# Prefer to use system utf8proc if available
global def utf8proc variant = match (pkgConfig "utf8proc")
  Some x = x
  None   =
    def cflags = ["-I{here}"]
    def headers = source "{here}/utf8proc_data.c", sources here '.*\.h'
    def compile x = compileC variant cflags headers (source "{here}/{x}")
    def objects = ["utf8proc.c"] | map compile
    CPackage "2.2.0" headers objects cflags []
