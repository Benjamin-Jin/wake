FROM ubuntu:16.04

RUN apt-get update && apt-get install -y \
  build-essential \
  devscripts \
  debhelper \
  git \
  libfuse-dev \
  libgmp-dev \
  libncurses5-dev \
  libre2-dev \
  libsqlite3-dev \
  pkg-config

WORKDIR /build
COPY . /build

RUN USE_FUSE_WAKE=0 make wake.db
RUN USE_FUSE_WAKE=0 ./bin/wake tarball Unit
RUN tar xvJf wake_*.tar.xz && cd wake-* && debuild -us -uc
